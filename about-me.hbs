{{!< default}}

{{#page}}

    <main id="gh-main" class="gh-main gh-canvas">

        <section class="gh-pagehead">
                            <img class="gh-author-image gh-pagehead-image" src="/assets/images/profile-circle.png" alt="{{name}}">
<!--            <span class="gh-author-icon">{{> icons/avatar}}</span>-->

            <header class="gh-pagehead-content">
                <h1 class="gh-author-name gh-pagehead-title">Paulo Antoniassi</h1>

                <div class="gh-author-meta">
                    <span class="gh-author-location">📍Brasil</span>
                    {{#if website}}
                        <a class="gh-author-website" href="{{website}}" target="_blank" rel="noopener">{{website}}</a>
                    {{/if}}
                    <div class="gh-author-social">
                        <a href="https://instagram.com/paulo.antoniassi" target="_blank" rel="noopener">{{> icons/instagram}}</a>
<!--                        <a class="gh-author-twitter" href="{{twitter_url}}" target="_blank" rel="noopener">{{> icons/twitter}}</a>-->
<!--                        <a class="gh-author-facebook" href="{{facebook_url}}" target="_blank" rel="noopener">{{> icons/facebook}}</a>-->
                    </div>
                </div>
            </header>
        </section>
        <article class="gh-article {{post_class}}">

            <header class="gh-article-header gh-canvas">
                <h1 class="gh-article-title">{{title}}</h1>
                {{> "feature-image"}}
            </header>

            <div class="gh-content gh-canvas">
                {{content}}
            </div>
        </article>
    </main>
{{/page}}